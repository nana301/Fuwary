<%= turbo_stream.replace dom_id(@tarot_result, :cards) do %>
  <%= render "cards", tarot_result: @tarot_result %>
<% end %>

<%= turbo_stream.replace "message-for-tarot-result-#{@tarot_result.id}" do %>
  <%= render "message", tarot_result: @tarot_result %>
<% end %>

<%= turbo_stream.replace "draw-button-for-tarot-result-#{@tarot_result.id}" do %>
  <%= render "draw_button", tarot_result: @tarot_result %>
<% end %>

<% if user_signed_in? %>
  <%= turbo_stream.replace "like-button-for-tarot-result-#{@tarot_result.id}" do %>
    <%= render "tarot_results/like_button", tarot_result: @tarot_result %>
  <% end %>
<% end %>
