<div class="mb-8 flex justify-center" data-controller="tanumarusensei">
  <div class="w-full max-w-3xl">
    <div class="flex items-center gap-4">
      <%= image_tag "tanumaru.png",
        class: "h-12 w-12 shrink-0 rounded-full object-cover ring-1 ring-gray-200" %>

      <div class="flex-1 min-w-0">
        <div class="rounded-2xl bg-gray-100 px-6 py-4 shadow-sm">
          <p class="text-sm font-semibold text-gray-600 mb-1">たぬまる先生</p>
          <p class="text-base leading-relaxed text-gray-900" data-tanumarusensei-target="message">
            こんにちは。今日は何を占ってみましょうか？
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

  <%# ✅ その場エラー（ページ上部バナー） %>
  <% if flash.now[:alert].present? %>
    <div class="mb-10 rounded-2xl border border-rose-200 bg-rose-50 px-5 py-4 text-rose-800">
      <div class="font-semibold">入力を確認してね</div>
      <div class="mt-1 text-sm"><%= flash.now[:alert] %></div>
    </div>
  <% end %>

  <div class="space-y-10">
    <!-- 今日の運勢（未ログインOK） -->
    <section class="bg-white/90 backdrop-blur rounded-2xl shadow-2xl ring-1 ring-black/5 p-8 md:p-10">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-semibold text-gray-800">今日の運勢</h2>
        <span class="text-xs font-semibold px-3 py-1 rounded-full bg-emerald-50 text-emerald-700">
          ログイン不要
        </span>
      </div>

      <%= form_with url: tarot_results_path, method: :post, class: "flex justify-center" do %>
        <%= hidden_field_tag :fortune_type, "today" %>

        <button
          class="w-full max-w-md py-4 bg-gradient-to-r from-purple-600 to-fuchsia-600 text-white rounded-xl text-lg
                 hover:shadow-xl transition transform hover:scale-[1.02] active:scale-[0.99]">
          今日の運勢を占う
        </button>
      <% end %>
    </section>

    <!-- ジャンル別占い -->
    <section class="bg-white/90 backdrop-blur rounded-2xl shadow-2xl ring-1 ring-black/5 p-8 md:p-10">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-semibold text-gray-800">ジャンル別占い</h2>
        <span class="text-xs font-semibold px-3 py-1 rounded-full bg-gray-100 text-gray-700">
          🔒 ログイン必須
        </span>
      </div>

      <% if user_signed_in? %>
        <%= form_with url: tarot_results_path, method: :post, class: "space-y-5" do %>
          <%= hidden_field_tag :fortune_type, "genre" %>

          <%# ✅ ジャンルのエラーをフォーム直下に出す %>
          <% if flash.now[:invalid_fortune_type] == "genre" && flash.now[:alert].present? %>
            <div class="rounded-xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700 font-semibold">
              <%= flash.now[:alert] %>
            </div>
          <% end %>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">ジャンルを選択</label>
            <select name="genre" required
              class="w-full p-3 border border-gray-300 rounded-xl bg-white
                     focus:ring-2 focus:ring-purple-500 focus:border-transparent">
              <option value="" selected disabled>ジャンルを選択</option>
              <option value="恋愛">恋愛</option>
              <option value="仕事">仕事</option>
              <option value="人間関係">人間関係</option>
            </select>
          </div>

          <div class="flex justify-center">
            <button
              class="w-full max-w-md py-4 bg-gradient-to-r from-purple-600 to-fuchsia-600 text-white rounded-xl
                     hover:shadow-xl transition transform hover:scale-[1.02] active:scale-[0.99]">
              占う
            </button>
          </div>
        <% end %>
      <% else %>
        <div class="rounded-2xl border border-gray-200 bg-gray-50 p-6 text-center">
          <p class="text-gray-700 mb-4">ログインすると利用できます</p>
          <%= link_to "ログイン / 新規登録",
                new_user_session_path,
                class: "inline-flex items-center justify-center px-6 py-3 rounded-xl bg-white border border-gray-200
                        hover:bg-gray-100 transition font-semibold text-gray-800" %>
        </div>
      <% end %>
    </section>

    <!-- 感情から占う -->
    <section class="bg-white/90 backdrop-blur rounded-2xl shadow-2xl ring-1 ring-black/5 p-8 md:p-10">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-semibold text-gray-800">感情から占う</h2>
        <span class="text-xs font-semibold px-3 py-1 rounded-full bg-gray-100 text-gray-700">
          🔒 ログイン必須
        </span>
      </div>

      <% if user_signed_in? %>
        <%= form_with url: tarot_results_path, method: :post, class: "space-y-5" do %>
          <%= hidden_field_tag :fortune_type, "emotion" %>

          <%# ✅ 感情のエラーをフォーム直下に出す %>
          <% if flash.now[:invalid_fortune_type] == "emotion" && flash.now[:alert].present? %>
            <div class="rounded-xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700 font-semibold">
              <%= flash.now[:alert] %>
            </div>
          <% end %>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">今の気持ちを選んでね</label>

            <div class="grid grid-cols-2 sm:grid-cols-3 gap-3">
              <% @emotions.each_with_index do |e, idx| %>
                <label class="group cursor-pointer">
                  <input
                    type="radio"
                    name="emotion"
                    value="<%= e %>"
                    class="peer absolute opacity-0 w-0 h-0"
                    <%= "required" if idx == 0 %>
                  >
                    <div
                      class="rounded-xl border border-gray-200 bg-white p-3 text-center font-semibold text-gray-700
                      hover:bg-purple-50 hover:border-purple-200 transition
                      peer-checked:bg-purple-600 peer-checked:text-white peer-checked:border-purple-600">
                    <%= e %>
                  </div>
                </label>
              <% end %>
            </div>

            <p class="mt-2 text-xs text-gray-500">※ どれか1つ選んでね</p>
          </div>

          <div class="flex justify-center">
            <button
              class="w-full max-w-md py-4 bg-gradient-to-r from-purple-600 to-fuchsia-600 text-white rounded-xl
                     hover:shadow-xl transition transform hover:scale-[1.02] active:scale-[0.99]">
              カードを引く
            </button>
          </div>
        <% end %>
      <% else %>
        <div class="rounded-2xl border border-gray-200 bg-gray-50 p-6 text-center">
          <p class="text-gray-700 mb-4">ログインすると利用できます</p>
          <%= link_to "ログインして占う",
                new_user_session_path,
                class: "inline-flex items-center justify-center px-6 py-3 rounded-xl bg-white border border-gray-200
                        hover:bg-gray-100 transition font-semibold text-gray-800" %>
        </div>
      <% end %>
    </section>
  </div>
</div>
