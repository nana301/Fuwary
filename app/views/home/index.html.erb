<div class="max-w-2xl mx-auto px-4 py-10">

  <h1 class="text-3xl font-bold text-center mb-8">
    🔮 今日のあなたへ
  </h1>

  <!-- タブ -->
  <div class="flex justify-center gap-2 mb-8">
    <button data-tab="today" class="tab-btn tab-active">今日の運勢</button>
    <button data-tab="genre" class="tab-btn">ジャンル別</button>
    <button data-tab="emotion" class="tab-btn">感情から占う</button>
  </div>

  <!-- 今日の運勢 -->
  <div id="tab-today" class="tab-content">
    <%= form_with url: tarot_results_path, method: :post do %>
      <%= hidden_field_tag :fortune_type, "today" %>

      <button class="w-full py-4 bg-purple-600 text-white rounded-xl hover:bg-purple-700">
        今日の運勢を占う
      </button>
    <% end %>
  </div>

  <!-- ジャンル別 -->
  <div id="tab-genre" class="tab-content hidden">
    <% if user_signed_in? %>
      <%= form_with url: tarot_results_path, method: :post do %>
        <%= hidden_field_tag :fortune_type, "genre" %>

        <select name="genre"
          class="w-full mb-4 p-3 border rounded-lg">
          <option value="">ジャンルを選択</option>
          <option value="恋愛">恋愛</option>
          <option value="仕事">仕事</option>
          <option value="人間関係">人間関係</option>
        </select>

        <textarea name="question"
          placeholder="気になること（任意）"
          class="w-full mb-4 p-3 border rounded-lg"></textarea>

        <button class="w-full py-4 bg-purple-600 text-white rounded-xl">
          占う
        </button>
      <% end %>
    <% else %>
      <%= render "shared/login_required" %>
    <% end %>
  </div>

  <!-- 感情から占う -->
  <div id="tab-emotion" class="tab-content hidden">
    <% if user_signed_in? %>
      <%= form_with url: tarot_results_path, method: :post do %>
        <%= hidden_field_tag :fortune_type, "emotion" %>

        <div class="grid grid-cols-2 gap-3 mb-4">
          <% ["不安", "迷い", "悲しい", "嬉しい", "疲れた", "前向き"].each do |e| %>
            <label class="border rounded-lg p-3 text-center cursor-pointer">
              <input type="radio" name="emotion" value="<%= e %>" class="hidden">
              <%= e %>
            </label>
          <% end %>
        </div>

        <button class="w-full py-4 bg-purple-600 text-white rounded-xl">
          カードを引く
        </button>
      <% end %>
    <% else %>
      <%= render "shared/login_required" %>
    <% end %>
  </div>

</div>
